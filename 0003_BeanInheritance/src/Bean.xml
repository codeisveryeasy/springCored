<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
   
   >
   
   <bean id="friendBean" class="com.spring.beaninheritance.Friend" parent="locationBean">
   		<property name="name" value="Manish"></property>
   		
   </bean>
   
   <bean id="locationBean" class="com.spring.beaninheritance.Location">
   		<property name="location" value="India"></property>
   </bean>
   
   </beans>